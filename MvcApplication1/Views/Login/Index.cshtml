@model MvcApplication1.Controllers.LoginModel

@{
    ViewBag.Title = "Login";
}

<center>
    <h2>Login</h2>

    <script src="@Url.Content("~/Scripts/jquery-2.1.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.intellisense.js")" type="text/javascript"></script>


    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.username)
        @Html.TextBoxFor(m => m.username)


        <br><br>
        @Html.LabelFor(m => m.password)
        @Html.PasswordFor(m => m.password)


        <br><br>
        <input input type="submit" />

        @Html.ValidationSummary()
    }

</center>